.container
  .col-md-4.col-md-offset-4
    .panel.panel-primary
      .panel-heading
        %center
          %h1 Log in
      - if logged_in?
        .panel-body
          "You have already logged in! Click the link below to go back to your profile"
          %br
        .panel-footer
          .button
            = link_to "Go Back", current_member, class: "btn btn-warning"
      - else
        .panel-body
          = form_for(:session, url: login_path) do |f|
            .form-group
              = f.label :email
              = f.email_field :email, class: 'form-control'
            .form-group
              = f.label :password
              = f.password_field :password, class: 'form-control'
            .button
              = f.submit "Log in", class: "btn btn-primary"
